{
  "manifest_version": 3,
  "name": "书签导出插件",
  "version": "1.0",
  "description": "一键导出书签为JSON或HTML文件。",
  "permissions": [
    "bookmarks",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "default-icon.png",
      "48": "default-icon.png",
      "128": "default-icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["default-icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}